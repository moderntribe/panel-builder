@import '../shared/spacing.pcss';
@import '../shared/colors.pcss';
@import '../shared/easings.pcss';

.wrapper {
	background: var(--live-edit-background);
	height: 50px;
	position: relative;
	z-index: 100004;
	top: -50px;
	transition: all 300ms var(--easeInOutSine);
	&.loaded {
		top: 0;
	}
}

.left {
	width: 40%;
	float: left;

	nav {
		width: 50px;
		float: left;
	}

	button,
	button i {
		width: 50px;
		height: 50px;
		line-height: 50px;
		padding: 0;
		text-align: center;
	}

	button {

		&:hover {
			background: var(--close-color);
		}

		i {
			font-size: 26px;
			color: #fff;
			margin: 0;
		}
	}
}

.title {
	height: 50px;
	line-height: 50px;
	float: left;
	color: #fff;
	padding-left: 15px;
	width: calc(100% - 51px);
	position: relative;

	h4 {
		margin: 0;
	}
}

.page {
	font-size: 15px;
	font-weight: 400;
	display: block;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	padding-left: 90px;
	width: calc(100% - 51px);
}

.editing {
	font-size: 12px;
	font-style: italic;
	padding-right: 6px;
	font-weight: 400;
	color: var(--post-list-text-color);
	position: absolute;
	top: 1px;
}

@svg-load desktop url('../img/icons/desktop-resize.svg') {

	path {
		fill: var(--color-white);
	}
}

@svg-load tablet url('../img/icons/tablet-resize.svg') {

	path {
		fill: var(--color-white);
	}
}

@svg-load mobile url('../img/icons/mobile-resize.svg') {

	path {
		fill: var(--color-white);
	}
}

@svg-load desktopHover url('../img/icons/desktop-resize.svg') {

	path {
		fill: var(--button-new-blue);
	}
}

@svg-load tabletHover url('../img/icons/tablet-resize.svg') {

	path {
		fill: var(--button-new-blue);
	}
}

@svg-load mobileHover url('../img/icons/mobile-resize.svg') {

	path {
		fill: var(--button-new-blue);
	}
}

.resizer {
	align-items: center;
	display: flex;
	position: absolute;
	height: 50px;
	line-height: 50px;
	width: 250px;
	margin-left: -125px;
	justify-content: center;
	top: 0;
	left: 50%;
	text-align: center;

	button {
		padding: 0;
		position: relative;
	}

	button,
	button i {
		width: 40px;
		height: 50px;
		line-height: 50px;
		padding: 0;
		text-align: center;
	}

	.desktop {
		background: svg-inline(desktop) center center no-repeat;
		background-size: auto 30px;
		width: 60px;

		&:hover,
		[data-mode="full"] & {
			background: svg-inline(desktopHover) center center no-repeat;
			background-size: auto 30px;
		}
	}

	.tablet {
		background: svg-inline(tablet) center center no-repeat;
		background-size: auto 23px;

		&:hover,
		[data-mode="tablet"] & {
			background: svg-inline(tabletHover) center center no-repeat;
			background-size: auto 23px;
		}
	}

	.mobile {
		background: svg-inline(mobile) center center no-repeat;
		background-size: auto 20px;

		&:hover,
		[data-mode="mobile"] & {
			background: svg-inline(mobileHover) center center no-repeat;
			background-size: auto 20px;
		}
	}
}

[data-browser="ie"] {

	&[data-mode="full"] {

		.resizer {

			.desktop {
				background: url('../img/icons/desktop-resize-hover.png') 50% 50% no-repeat;
				background-size: auto 35px;
			}
		}
	}

	&[data-mode="tablet"] {

		.resizer {

			.tablet {
				background: url('../img/icons/tablet-resize-hover.png') 20px 50% no-repeat;
				background-size: auto 28px;
			}
		}
	}

	&[data-mode="mobile"] {

		.resizer {

			.mobile {
				background: url('../img/icons/mobile-resize-hover.png') 50% 50% no-repeat;
				background-size: auto 22px;
			}
		}
	}

	.resizer {

		.desktop {
			background: url('../img/icons/desktop-resize.png') 50% 50% no-repeat;
			background-size: auto 35px;

			&:hover {
				background: url('../img/icons/desktop-resize-hover.png') 50% 50% no-repeat;
				background-size: auto 35px;
			}
		}

		.tablet {
			background: url('../img/icons/tablet-resize.png') 20px 50% no-repeat;
			background-size: auto 28px;

			&:hover {
				background: url('../img/icons/tablet-resize-hover.png') 20px 50% no-repeat;
				background-size: auto 28px;
			}
		}

		.mobile {
			background: url('../img/icons/mobile-resize.png') 50% 50% no-repeat;
			background-size: auto 22px;

			&:hover {
				background: url('../img/icons/mobile-resize-hover.png') 50% 50% no-repeat;
				background-size: auto 22px;
			}
		}
	}
}

.resizerHeading {
	display: none;
	height: 50px;
	line-height: 50px;
	color: #fff;
	padding: 0 20px 0 0;
	vertical-align: top;
}

.right {
	width: 40%;
	float: right;
	text-align: right;
	padding: 9px 10px 0 0;
}
