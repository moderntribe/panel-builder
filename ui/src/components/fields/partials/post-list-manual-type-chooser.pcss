@import '../../../shared/colors.pcss';
@import '../../../shared/spacing.pcss';

.container {
	background: var(--post-list-bg);
	position: relative;
	overflow: hidden;
	text-align: center;

	button {
		background-color: var(--border-bottom-settings-active);
		border-radius: 2px;
		min-width: 150px;
		display: none;
		width: 100%;
	}

	&[data-index="0"] {
		button {
			display: inline-block;
		}
	}
}

.divider {
	display: block;
	height: 5px;
}