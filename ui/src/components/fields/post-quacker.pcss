@import '../../shared/spacing.pcss';
@import '../../shared/colors.pcss';

.field {
	composes: fieldContainer from "../../shared/fields.pcss";
	transform: translate3d(0, 0, 0);
}

.label {
	composes: inputLabel from "../../shared/fields.pcss";
}

.tabLabel {
	composes: inputLabel from "../../shared/fields.pcss";
	color: grey;
}

.tabs {
	composes: group from "../../shared/helpers.pcss";

	button {
		margin-right: 3px;
		margin-bottom: -1px;

		&.active {
			border-bottom-color: var(--color-white);
			background: var(--color-white);
		}
	}
}

.tabWrapper {

}

.tabContent {
	padding: 20px 10px;
	background: var(--color-white);
	border: 1px solid var(--tabs-border-color);
	display: none;

	&.active {
		display: block;
	}
}

.panelFilterRow {
	margin-bottom: 10px;
	position: relative;

	img {
		max-width: 100%;
		height: auto;
	}

	input:not([type='button']) {
		padding: var(--field-padding-vertical) 0;
		width: 100%;
	}

	legend {
		color: grey;
	}
}

.description {
	composes: inputDescription from "../../shared/fields.pcss";
}

.blankPostContainer {
	position: relative;
	display: block;
	width: 100%;
	padding: 0 0 10px;
	border: var(--border-color-alt) 1px solid;

	& > div {
		padding: 0;
		position: relative;
		width: 100%;
		height: 70px;
		overflow: hidden;
	}
}
