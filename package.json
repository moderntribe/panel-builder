    "expect": "^1.20.2",
    "extract-text-webpack-plugin": "^2.1.0",
    "gsap": "^1.19.1",
    "jquery": "^2.2.0",
    "jquery-param": "^0.2.0",
    "lodash": "^4.17.4",
    "lost": "^7.1.1",
    "moment": "^2.17.1",
    "node-polyglot": "^2.0.0",
